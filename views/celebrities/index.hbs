<h1>Celebrities</h1>
<a href="/celebrities/new" class="btn btn-primary">New Celebrity</a>

<div class="row">
  <div class="col-md-4">
    <ul id="celebrities-list">
      {{#each celebrities}}
        <li class="my-3">
          <div class="row">
            <div class="col-md-6">
              <a href="/celebrities/{{this._id}}">
                {{this.name}}
              </a>
            </div>
            <div class="col-md-6">
              <a href="/celebrities/{{this._id}}/edit" class="btn btn-primary btn-sm">Update</a>
              <a href="/celebrities/{{this._id}}/delete" class="btn btn-danger btn-sm">Delete</a>
            </div>
          </div>
        </li>
      {{/each}}
    </ul>
  </div>
</div>