<h1>Celebrities</h1>

<div class="row">
  <div class="col-md-4">
    <ul>
      {{#each celebrities}}
        <li class="my-3">
          <div class="row">
            <div class="col-md-8">
              <a href="/celebrities/{{this._id}}">
                {{this.name}}
              </a>
            </div>
            <div class="col-md-4">
              <a href="/celebrities/{{this._id}}/delete" class="btn btn-danger btn-sm">Delete</a>
            </div>
          </div>
        </li>
      {{/each}}
    </ul>
  </div>
</div>