<h2>Update Movie</h2>
<div class="row">
  <div class="col-md-4">

    <form action="/movies/{{_id}}/update" method="post" class="form">
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" class="form-control" value="{{title}}" />
      </div>
      <div class="form-group">
        <label for="genre">Genre</label>
        <input type="text" name="genre" value="{{genre}}" class="form-control">
        <small id="genreHelp" class="form-text text-muted">
          <strong>Values for genre: </strong>
          "action", "romantic", "drama", "adventure", "comedy", "science-fiction", "fantasy", "doc"
        </small>
      </div>
      <div class="form-group">
        <label for="plot">Plot</label>
        <textarea name="plot" class="form-control" placeholder="Enter the plot of the Movie">
          {{plot}}
        </textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-success">Update</button>
      </div>
    </form>
  </div>
</div>