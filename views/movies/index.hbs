<h1>Movies</h1>
<a href="/movies/new" class="btn btn-primary">New Movie</a>

<div class="row">
  <div class="col-md-8">
    <ul>
      {{#each movies}}
        <li class="my-3">
          <div class="row">
            <div class="col-md-6">
              <a href="/movies/{{this._id}}">
                {{this.title}}
              </a>
              <p class="muted">
                <strong>Genre:</strong>
                {{this.genre}}
              </p>  
            </div>
            <div class="col-md-6">
              <a href="/movies/{{this._id}}/edit" class="btn btn-primary btn-sm">Update</a>
              <a href="/movies/{{this._id}}/delete" class="btn btn-danger btn-sm">Delete</a>
            </div>
          </div>
        </li>
      {{/each}}
    </ul>
  </div>
</div>