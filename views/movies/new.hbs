<h2>Insert a new movie into the database</h2>
<div class="row">
  <div class="col-md-4">

    <form action="/movies/create" method="get" class="form">
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" class="form-control" placeholder="Enter the title of the movie" />
      </div>
      <div class="form-group">
        <label for="genre">Genre</label>
        <input type="text" name="genre" placeholder="i.e. action, adventure, fantasy" class="form-control">
        <small id="genreHelp" class="form-text text-muted">
          <strong>Values for genre: </strong>
          "action", "romantic", "drama", "adventure", "comedy", "science-fiction", "fantasy", "doc"
        </small>
      </div>
      <div class="form-group">
        <label for="plot">Plot</label>
        <textarea name="plot" class="form-control" placeholder="Enter the plot of the Movie"></textarea>
      </div>
      <div class="form-group" id="cast">
        <label for="cast">Cast</label>
        <select name="cast" class="cast" id="cast-1">
          <option value="">select</option>
          {{#each actors}}
            <option value="{{this._id}}">{{this.lastName}} {{this.firstName}}</option>            
          {{/each}}
        </select>
        <strong>
         <a href="" id="addSelect">
           +
         </a>
        </strong>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-success">Save</button>
      </div>
    </form>
  </div>
</div>